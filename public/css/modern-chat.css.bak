    margin: 0;
}

.chat-details.open {
    display: flex;
}

.details-close-btn {
    position: absolute;
    top: 16px;
    right: 16px;
    font-size: 1.5rem;
    cursor: pointer;
    color: #6b7280;
}

.details-close-btn:hover {
    color: #111827;
}

.profile-card {
    text-align: center;
    margin-bottom: 24px;
    padding-top: 20px;
}

.profile-lg {
    width: 90px;
    height: 90px;
    border-radius: 50%;
    margin: 0 auto 12px;
    object-fit: cover;
}

.profile-name {
    font-weight: 600;
    font-size: 1.15rem;
    color: #111827;
    margin-bottom: 4px;
}

.profile-status {
    font-size: 0.85rem;
    color: #10b981;
}

.detail-section {
    margin-bottom: 28px;
    padding-bottom: 20px;
    border-bottom: 1px solid #f3f4f6;
}

.detail-title {
    font-size: 0.8rem;
    font-weight: 600;
    color: #9ca3af;
    margin-bottom: 14px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.info-row {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 12px;
    color: #374151;
    font-size: 0.9rem;
}

.setting-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 12px 0;
}

.toggle-switch {
    width: 44px;
    height: 24px;
    background: #d1d5db;
    border-radius: 12px;
    position: relative;
    cursor: pointer;
    transition: 0.2s;
}

.toggle-switch::after {
    content: '';
    position: absolute;
    width: 20px;
    height: 20px;
    border-radius: 50%;
    background: white;
    top: 2px;
    left: 2px;
    transition: 0.2s;
}

.toggle-switch.active {
    background: #10b981;
}

.toggle-switch.active::after {
    left: 22px;
}

.media-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 8px;
}

.media-item {
    aspect-ratio: 1;
    background: #f3f4f6;
    border-radius: 8px;
}


/* === DARK MODE OVERRIDES (Glassmorphism) === */
[data-theme="dark"] .chat-container-modern {
    background: #020617;
    /* Solid Deep Dark Background */
}

/* Sidebar Dark Glass */
[data-theme="dark"] .chat-sidebar {
    background: rgba(15, 23, 42, 0.6);
    /* Slightly transparent for glass effect over dark body */
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border-right: 1px solid rgba(255, 255, 255, 0.08);
}

[data-theme="dark"] .chat-sidebar-header,
[data-theme="dark"] .chat-sidebar-footer {
    border-color: rgba(255, 255, 255, 0.08);
    background: rgba(15, 23, 42, 0.4);
    /* Subtle distinction */
}

[data-theme="dark"] .search-box {
    background: rgba(255, 255, 255, 0.05);
}

[data-theme="dark"] .search-box input {
    color: #f8fafc;
}

[data-theme="dark"] .chat-item:hover {
    background: rgba(255, 255, 255, 0.05);
}

[data-theme="dark"] .chat-name {
    color: #f8fafc;
}

[data-theme="dark"] .chat-preview,
[data-theme="dark"] .chat-time {
    color: #94a3b8;
}

[data-theme="dark"] .avatar-img {
    border-color: rgba(255, 255, 255, 0.1);
}

/* Main Chat Dark Glass */
[data-theme="dark"] .chat-main {
    background: rgba(2, 6, 23, 0.4);
    /* Let the deep dark body show through */
    backdrop-filter: blur(20px);
}

[data-theme="dark"] .chat-main-header {
    background: rgba(15, 23, 42, 0.7);
    border-bottom: 1px solid rgba(255, 255, 255, 0.08);
    backdrop-filter: blur(10px);
}

[data-theme="dark"] .header-icon {
    color: #cbd5e1;
}

/* Scroll area transparent */
[data-theme="dark"] .chat-messages {
    background: transparent;
}

/* Footer Dark Glass */
[data-theme="dark"] .chat-footer {
    background: rgba(15, 23, 42, 0.9);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
}

[data-theme="dark"] .input-wrapper {
    background: rgba(255, 255, 255, 0.1);
}

[data-theme="dark"] .input-wrapper input {
    color: #f8fafc;
}

[data-theme="dark"] .btn-icon,
[data-theme="dark"] .btn-emoji {
    color: #94a3b8;
}

/* Message Bubbles Dark Mode */
[data-theme="dark"] .msg-wrapper.received .msg-bubble {
    background: rgba(30, 41, 59, 0.7);
    /* Slate 800 Glass */
    color: #f8fafc;
    border: 1px solid rgba(255, 255, 255, 0.05);
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
}

[data-theme="dark"] .msg-wrapper.sent .msg-bubble {
    background: #006064;
    /* Keep Brand Deep Teal */
    color: white;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
}

/* Chat Header Flexibility */
.chat-main-header {
    justify-content: space-between !important;
}

/* === DETAILS PANE DARK MODE === */
[data-theme="dark"] .chat-details {
    background: rgba(15, 23, 42, 0.95);
    border-left: 1px solid rgba(255, 255, 255, 0.08);
}

[data-theme="dark"] .details-close-btn {
    color: #94a3b8;
}

[data-theme="dark"] .profile-name {
    color: #f8fafc;
}

[data-theme="dark"] .detail-title {
    color: #94a3b8;
}

[data-theme="dark"] .detail-section {
    border-bottom: 1px solid rgba(255, 255, 255, 0.08);
}

[data-theme="dark"] .info-row,
[data-theme="dark"] .setting-row {
    color: #cbd5e1;
}

[data-theme="dark"] .media-item {
    background: rgba(255, 255, 255, 0.05);
}

[data-theme="dark"] .toggle-switch {
    background: #334155;
}

[data-theme="dark"] .toggle-switch.active {
    background: #006064;
}

/* Container Wrapper Dark Mode */
[data-theme="dark"] #messages-list {
    background: rgba(2, 6, 23, 0.5);
    border: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
}

::-webkit-scrollbar-track {
    background: transparent;
}

::-webkit-scrollbar-thumb {
    background: rgba(0, 0, 0, 0.2);
    border-radius: 3px;
}

::-webkit-scrollbar-thumb:hover {
    background: rgba(0, 0, 0, 0.3);
}

/* === MOBILE RESPONSIVENESS === */
@media (max-width: 768px) {
    .chat-container-modern {
        position: relative;
    }

    .chat-sidebar {
        width: 100%;
        position: absolute;
        z-index: 20;
        transition: transform 0.3s ease;
    }

    .chat-main {
        width: 100%;
        position: absolute;
        z-index: 10;
        transform: translateX(100%);
        transition: transform 0.3s ease;
    }

    /* Active State: Show Main Chat */
    .chat-container-modern.mobile-chat-active .chat-sidebar {
        transform: translateX(-100%);
    }

    .chat-container-modern.mobile-chat-active .chat-main {
        transform: translateX(0);
        z-index: 30;
    }

    .chat-details {
        position: fixed;
        top: 0;
        right: 0;
        bottom: 0;
        width: 100%;
        z-index: 50;
    }

    /* Mobile Back Button */
    .mobile-back-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 32px;
        height: 32px;
        border: none;
        background: transparent;
        color: #545454;
        font-size: 1.2rem;
        margin-right: 8px;
        cursor: pointer;
        border-radius: 50%;
    }

    .mobile-back-btn:hover {
        background: rgba(0, 0, 0, 0.05);
    }

    [data-theme="dark"] .mobile-back-btn {
        color: #cbd5e1;
    }

    [data-theme="dark"] .mobile-back-btn:hover {
        background: rgba(255, 255, 255, 0.1);
    }

    .mobile-menu-btn {
        display: block;
        /* Visible on mobile */
    }
}

@media (min-width: 769px) {

    .mobile-back-btn,
    .mobile-menu-btn {
        display: none;
        /* Hidden on desktop */
    }
}